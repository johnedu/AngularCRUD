<div class="container" ng-controller="app.views.admin.persons as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Personas</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva()" title="">Registrar Nueva Persona <span class="fa fa-plus font-size-16"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.personList.length}} personas</p>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Nombre</th>
                                <th class="text-center">Apellido</th>
                                <th class="text-center">Edad</th>
                                <th class="text-center">Editar</th>
                                <th class="text-center">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="person in vm.personList">
                                <td>
                                    {{person.name}}
                                </td>
                                <td>
                                    {{person.apellido}}
                                </td>
                                <td>
                                    {{person.edad}}
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(person.id, person.name)" title="Editar la persona"><span class="fa fa-pencil fa-2x"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(person.id)" title="Eliminar la persona"><span class="fa fa-trash fa-2x"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
